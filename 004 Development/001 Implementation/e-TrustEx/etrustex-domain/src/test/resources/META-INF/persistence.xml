<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="etrustex-test"	transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>eu.europa.ec.cipa.etrustex.domain.Certificate</class>
		<class>eu.europa.ec.cipa.etrustex.domain.CIALevel</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Credentials</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Document</class>
		<class>eu.europa.ec.cipa.etrustex.domain.InterchangeAgreement</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Party</class>
		<class>eu.europa.ec.cipa.etrustex.domain.PartyIdentifier</class>
		<class>eu.europa.ec.cipa.etrustex.domain.PartyRole</class>
		<class>eu.europa.ec.cipa.etrustex.domain.PartyAgreement</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Profile</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Role</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Transaction</class>
		<class>eu.europa.ec.cipa.etrustex.domain.Message</class>
		<class>eu.europa.ec.cipa.etrustex.domain.MessageBinary</class>
		<class>eu.europa.ec.cipa.etrustex.domain.util.MessageResponseCode</class>
		<class>eu.europa.ec.cipa.etrustex.domain.util.MetaDataItem</class>
		<class>eu.europa.ec.cipa.etrustex.domain.util.StateMachine</class>
		<class>eu.europa.ec.cipa.etrustex.domain.util.XmlStore</class>
		<class>eu.europa.ec.cipa.etrustex.domain.routing.Endpoint</class>
		<class>eu.europa.ec.cipa.etrustex.domain.routing.JMSEndpoint</class>
		<class>eu.europa.ec.cipa.etrustex.domain.routing.WSEndpoint</class>
		<class>eu.europa.ec.cipa.etrustex.domain.admin.User</class>
		<class>eu.europa.ec.cipa.etrustex.domain.admin.BusinessDomain</class>
		<class>eu.europa.ec.cipa.etrustex.domain.admin.UserAccessRights</class>
		<class>eu.europa.ec.cipa.etrustex.domain.admin.UserRole</class>
		<class>eu.europa.ec.cipa.etrustex.domain.query.DataExtractionConfig</class>
		<class>eu.europa.ec.cipa.etrustex.domain.query.QueryResult</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/etrustex" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="trustex_user" />
			<property name="hibernate.connection.password" value="trustex_passw" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"/> 
			<property name="hibernate.cache.provider_configuration_file_resource_path" value="ehcache.xml"/>
			<property name="hibernate.cache.use_query_cache" value="false"/>
			<property name="hibernate.cache.use_second_level_cache" value="false"/>
		</properties>
	</persistence-unit>
</persistence>