	<servlet>
		<servlet-name>services</servlet-name>
		<servlet-class>eu.europa.ec.cipa.etrustex.integration.web.CustomMessageDispatcherServlet</servlet-class>
		<init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>/WEB-INF/services-servlet.xml</param-value>
    	</init-param>
    	<init-param>
	        <param-name>messageReceiverBeanName</param-name>
	        <param-value>messageReceiver</param-value>
    	</init-param>
    	<init-param>
	    	<param-name>wl-dispatch-policy</param-name>
	    	<param-value>epriorWorkManager</param-value>
	    </init-param>  	
	</servlet>
	<servlet>
		<servlet-name>customerServices</servlet-name>
		<servlet-class>eu.europa.ec.cipa.etrustex.integration.web.CustomMessageDispatcherServlet</servlet-class>
		<init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>/WEB-INF/services-servlet.xml</param-value>
    	</init-param>
    	<init-param>
	        <param-name>messageReceiverBeanName</param-name>
	        <param-value>customerMessageReceiver</param-value>
    	</init-param>
    	<init-param>
	    	<param-name>wl-dispatch-policy</param-name>
	    	<param-value>epriorWorkManager</param-value>
	    </init-param>   
	</servlet>
	<servlet>
		<servlet-name>supplierServices</servlet-name>
		<servlet-class>eu.europa.ec.cipa.etrustex.integration.web.CustomMessageDispatcherServlet</servlet-class>
		<init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>/WEB-INF/services-servlet.xml</param-value>
    	</init-param>
    	<init-param>
	        <param-name>messageReceiverBeanName</param-name>
	        <param-value>supplierMessageReceiver</param-value>
    	</init-param>
    	<init-param>
	    	<param-name>wl-dispatch-policy</param-name>
	    	<param-value>epriorWorkManager</param-value>
	    </init-param>   
	</servlet>
	<servlet>
	    <servlet-name>bshservlet</servlet-name>
	    <servlet-class>bsh.servlet.BshServlet</servlet-class>
	    <init-param>
	    	<param-name>wl-dispatch-policy</param-name>
	    	<param-value>epriorWorkManager</param-value>
	    </init-param>  
	 </servlet>
	<servlet-mapping>
		<servlet-name>bshservlet</servlet-name>
		<url-pattern>/eval</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>services</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>customerServices</servlet-name>
		<url-pattern>/services/customer/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>supplierServices</servlet-name>
		<url-pattern>/services/supplier/*</url-pattern>
	</servlet-mapping>
	
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- This is the definition of the security constraint to enforce basic 
		authentication on on soap Http web service calls -->
</web-app>
